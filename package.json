{
  "name": "the-composer",
  "version": "0.1.0",
  "description": "A WebVR room-scale experience for HTC Vive",
  "repository": {
    "type": "git",
    "url": "git+https://aparacuellos@bitbucket.org/aparacuellos/the-composer.git"
  },
  "main": "index.js",
  "dependencies": {
    "three": "0.75.0"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "budo": "^8.2.1",
    "glslify": "^5.0.2",
    "uglify-js": "^2.6.2"
  },
  "scripts": {
    "start": "budo --open lib/index.js:js/index.js --dir app --live",
    "build": "browserify lib/index.js | uglifyjs -cm > app/js/index.js"
  },
  "browserify": {
    "transform": [ "glslify" ]
  },
