{
  "name": "the-composer",
  "version": "0.1.0",
  "description": "A WebVR room-scale experience for HTC Vive",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fernandojsg/the-composer-threejs.git"
  },
  "main": "index.js",
  "dependencies": {
    "browserify": "^13.0.0",
    "glslify": "^5.0.2",
    "mkdirp": "^0.5.1",
    "three": "0.78.0",
    "tween.js": "v16.3.4",
    "uglify-js": "^2.6.2"
  },
  "devDependencies": {
    "budo": "^8.2.2"
  },
  "scripts": {
    "start": "budo --open lib/index.js:js/index.js --dir app",
    "build": "mkdirp app/js && browserify lib/index.js | uglifyjs -c warnings=false -m > app/js/index.js",
    "postinstall": "npm run build"
  },
  "browserify": {
    "transform": [
      "glslify"
    ]
  },
  "authors": [
    "Arturo Paracuellos <arturo@unboring.net>"
  ],
  "license": "MIT"
}
